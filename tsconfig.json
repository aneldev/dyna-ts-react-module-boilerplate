{
  "compilerOptions": {
    "lib": [
      "ES2019",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": false,
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.stories.tsx"
  ]
}
